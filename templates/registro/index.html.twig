{% extends 'base.html.twig' %}

{% block title %}Hello RegistroController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>
    <!--Get text from RegistroController.php and stores in {{ controller_name }}-->
		<h1>Hello
			{{ variablename }}!</h1>
</div>

<!--Start form block-->
<div class="example-wrapper">
    {% for message in app.flashes('exito') %}<!--show message if register succeeded-->
        <div class="alert alert-success">
            {{ message }}<!--message received from RegistroController.php-->
        </div>
    {% endfor %}
    {{ form(formulario) }}<!--add form to body-->
</div>
<!--End form block-->

{% endblock %}
